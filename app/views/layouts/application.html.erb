<!DOCTYPE html>
<html>
  <head>
    <title>Insatram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    
  </head>

  <body>
    
      
      <div class="jumbotron text-center" style="margin-bottom:0">
        <h1>My Instagram Page</h1>
        <%= image_tag("logos/insta.jpg", width: "100px") %>
      </div>
      
      
      
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
       <a class="navbar-brand" href="#">Insta</a>
       
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
     <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    
<% if logged_in? %>
  
     <li class="nav-item">
      <a class="nav-link" href="#"><%= link_to "Profile", user_path(current_user.id) %></a>
      </li>
   <li class="nav-item">
     <a class="nav-link" href="#"><%= link_to "Logout", logout_path(current_user.id), method: :delete %></a>
   </li>
    <% else %>
      <li class="nav-item">
      <a class="nav-link" href="#"><%= link_to "Sign up", new_user_path %></a>
      </li>
    <li class="nav-item">
    <a class="nav-link" href="#"><%= link_to "Login", login_path %></a>
     </li>
    <% end %>
</nav>
      
  


    <%= yield %>
    
   <div class="jumbotron text-center" style="margin-bottom:0">  
    <footer>
       <p>Operating company DIVE INTO CODE</p>
       <p>Â© 2015-2016 Copyright DIVE INTO CODE Corp.</p>
  </footer>
  </div>
  
  </body>
</html>
